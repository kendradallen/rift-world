@model RiftWorld.UI.MVC.Models.JournalVM

<section id="journalEntries" class="col-12" name="Journal">
    <h2 class="line">Journal Entries</h2>
    <div class="row justify-content-center">
        <div id="these-journals" class="hang col-9" style="text-align:left; padding-left:1.8rem;">

            @foreach (var item in Model.Journals)
            {
                <div class="journal">
                    @Html.DisplayFor(modelItem => item.Written) -  <a href="@Url.Action("Details", "Journals", new { id = item.JournalId })">@Html.DisplayFor(modelItem => item.ContentMini)@if (item.IsLonger)
                    {@("...")}</a>
                </div>
            }
            @if (Model.HasMore)
            {
                @Html.ActionLink("See more", "JournalHub", "Characters", new { id = Model.CharacterId }, null)
            }
        </div>

    </div>

</section>