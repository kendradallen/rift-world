@{
    ViewBag.Title = "Change Current Location";
}
<div class="col-12">

    <h2>@ViewBag.Title</h2>
    <div class="alert alert-danger" role="alert">
        As a reminder: notify Katherine or a mod before updating the location of your character.
    </div>
    @using (Html.BeginForm("ChangeLocation", "Hub"))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label for="CurrentLocationId" class="control-label col-md-2">Current Location</label>
            <div class="col-md-10">
                @Html.DropDownList("CurrentLocationId", null, htmlAttributes: new { @class = "" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-12">
                <input type="submit" value="Save" class="btn btn-success btn-block" />
            </div>
        </div>

    }
</div>

@section Scripts {
    <script src="~/Scripts/SelectBoxes/slimselect.min.js"></script>
    <script src="~/Scripts/MyJS/edit.min.js"></script>
    <script>
        new SlimSelect({
            select: '#CurrentLocationId'
        })
    </script>
}
