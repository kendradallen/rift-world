@model IEnumerable<RiftWorld.DATA.EF.Journal>

<div id="journals" class="tabcontent-a" name="Journal Log">
    @if (Model.Count() == 0)
    {
        <p>You don't have any approved journals yet</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OocDateWritten)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HasUnseenEdit)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OocDateWritten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HasUnseenEdit)
                    </td>
                    <td>
                        @Html.ActionLink("Read", "Details", "Journals", new { id = item.JournalId }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Journals", new { id = item.JournalId }, null)
                    </td>
                </tr>
            }
        </table>
    }
</div>
