@model IEnumerable<RiftWorld.DATA.EF.Info>

@{
    ViewBag.Title = "Todo";
}

<div class="col-12">
    <h2>Todo</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blurb)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blurb)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.InfoId }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.InfoId }) |
                @Html.ActionLink("Edit Complex", "AssoEdit", new { id = item.InfoId }) |
            </td>
        </tr>
        }

    </table>
</div>