@model RiftWorld.DATA.EF.Journal

@{
    ViewBag.Title = "Edit Journal";
}
<div class="col-12">
    @if (User.IsInRole("Player"))
    {
        <div class="alert alert-danger" role="alert">
            As a reminder: do not update a journal without notifying either Katherine or a designated mod before hand with what the update is in general. We will know when you update a journal.
        </div>
    }


    @using (Html.BeginForm("Edit", "Journals"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Journal</h4>
            <hr />
            @Html.HiddenFor(model => model.JournalId)
            @Html.HiddenFor(model => model.CharacterId)
            @Html.HiddenFor(model => model.OocDateWritten)
            @Html.HiddenFor(model => model.IsApproved)

            <div class="form-group">
                @Html.LabelFor(model => model.TheContent, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-12">
                    <div class="da-focus">
                        @Html.EditorFor(model => model.TheContent, new { htmlAttributes = new { @class = "form-control", style = "height: 15em; font-size:1em;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.TheContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>