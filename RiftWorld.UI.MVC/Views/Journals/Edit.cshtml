@model RiftWorld.DATA.EF.Journal

@{
    ViewBag.Title = "Edit Journal";
}
<div class="col-12">
    @if (User.IsInRole("Player"))
    {
        <div class="alert alert-danger" role="alert">
            As a reminder: do not update a journal without notifying either Katherine or a designated mod before hand with what the update is in general. We will know when you update a journal.
        </div>
    }


    @using (Html.BeginForm("Edit", "Journals"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.JournalId)
            @Html.HiddenFor(model => model.CharacterId)
            @Html.HiddenFor(model => model.OocDateWritten)
            @Html.HiddenFor(model => model.IsApproved)

            <div class="form-group">
                <label class="control-label" for="TheContent">@Html.DisplayNameFor(model =>model.TheContent) - @Html.DisplayFor(model =>model.OocDateWritten)</label>
                <div class="col-12">
                    <div class="da-focus">
                        @Html.EditorFor(model => model.TheContent, new { htmlAttributes = new { @class = "form-control", style = "height: 15em; font-size:1em;" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.TheContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row justify-content-end">
                <div class="col-md-offset-2 col-auto btn-signature">
                    <input type="submit" value="Save Changes to Journal" class="btn btn-default btn-lg" />
                </div>
            </div>
        </div>
    }
        <div style="text-align:left; font-size:1em; font-weight:200;">
            <!--todo figure out this linking at the end and where to go in what case-->
            @if (Model.IsApproved)
            {
                @Html.ActionLink("Cancel Edit", "Details", new { id= Model.JournalId})
            }
            else if (User.IsInRole("Player") || (User.IsInRole("Mod") && ViewBag.ModChar == Model.CharacterId))
            {
                @Html.ActionLink("Cancel Edit", "Index", "Hub")
            }
            else
            {
                @Html.ActionLink("Cancel Edit", "Approvals", "Infos")
            }
        </div>
</div>