@model IEnumerable<RiftWorld.DATA.EF.Org>

@{
    ViewBag.Title = "Organizations";
}

@section styles{
    <style>
        .table-row {
            cursor: pointer;
        }
    </style>
    }
<div class="col-12">
    <h2 class="line">@ViewBag.Title</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Info.Blurb)
                </th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr class="table-row" data-href="@Url.Action("Details", new { id = item.OrgId })">
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Info.Blurb)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.OrgId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.OrgId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OrgId })
                    </td>*@
                </tr>
            }
        </tbody>

    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function ($) {
            $(".table-row").click(function () {
                window.document.location = $(this).data("href");
            });
        });    </script>
    }