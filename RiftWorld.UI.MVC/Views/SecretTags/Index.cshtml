@model IEnumerable<RiftWorld.DATA.EF.SecretTag>

@{
    ViewBag.Title = "Secret Tags";
}
@section styles{
    <style>
        .table td{
            border-top:none ;
        }
    </style>
    }
<div class="col-12">

    <h2 class="line">@ViewBag.Title</h2>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="da-focus">
                <input id="tagSearch" type="text" placeholder="Search.." class="form-control">
            </div>
        </div>

        <table class="table table-hover table-sm col-sm-7">
            <thead>
                <tr>
                    <th class="p-0"></th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody id="tagTable">

                @foreach (var item in Model)
                {
                    <tr class="table-row" style="transform:rotate(0)">
                        <th scope="row" class="p-0"><a href="@Url.Action("Details", new { id = item.SecretTagId })" class="stretched-link"></a></th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }

</table>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $("#tagSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tagTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}