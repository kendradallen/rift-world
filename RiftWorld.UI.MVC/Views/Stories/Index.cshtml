@model IEnumerable<RiftWorld.DATA.EF.Story>

@{
    ViewBag.Title = "Index";
}

<div class="col-12">

    <h2>Index</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommissionedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCannon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAboutId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommissionedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCannon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info.Name)
                </td>
                <td>
                    <a href="@Url.Action("Details", "Infos", new { id = item.IsAboutId, story=item.StoryId})#story">View</a> | 
                    @Html.ActionLink("Edit", "Edit", new { id = item.StoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StoryId })
                </td>
            </tr>
        }

    </table>
</div>
