@model IEnumerable<RiftWorld.DATA.EF.Story>

@if (Model.Count() != 0)
{
    <section id="story" class="col-12" name="Stories">
        <h2 class="line">Stories</h2>
        <div class="tab">
            @foreach (var item in Model)
            {
                <button class="tablinks" onclick="openStory(event, @item.StoryId)">@item.Title</button>
            }
        </div>
        @foreach (var item in Model)
        {
            <div class="tabcontent" id="@item.StoryId">
                <h3>@item.Title</h3>
                <div class="intro">
                    <p>
                        As told by the bard Sel'thein on @Html.DisplayFor(modelItem => item.DateTold) @* dear future me: html.DisplayFor is how to get the metadata formatting. item.Prop will just get the raw value of it with none of that formatting*@
                    </p>
                    <p>Requested by @Html.DisplayFor(modelItem => item.CommissionedBy)</p>
                    @if (!item.IsCannon)
                    {
                        <div class="cannon">
                            <p>Some say this story is untrue.</p>
                            <p>I say: not all stories need be true.</p>
                        </div>
                    }
                </div>
                <div class="more hang">
                    @Html.Raw(item.TheContent)
                </div>
            </div>
        }
    </section>

}
