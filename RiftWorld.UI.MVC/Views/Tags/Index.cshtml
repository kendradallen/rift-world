@model IEnumerable<RiftWorld.DATA.EF.Tag>

@{
    ViewBag.Title = "Tags";
}
@section styles{
    <style>
        .table td {
            border-top: none;
        }
    </style>
}
<div class="col-12">

    <h2 class="line">@ViewBag.Title</h2>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="da-focus">
                <input id="tagSearch" type="text" placeholder="Search.." class="form-control">
            </div>
        </div>

        <table class="table table-hover table-sm col-sm-7">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody id="tagTable">

                @foreach (var item in Model)
                {
                    <tr class="table-row" data-href="@Url.Action("Details", new { id = item.TagId })" scope="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.TagName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }

        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function ($) {
            $(".table-row").click(function () {
                window.document.location = $(this).data("href");
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#tagSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tagTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}