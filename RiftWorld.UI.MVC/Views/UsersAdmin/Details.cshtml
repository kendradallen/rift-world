@model RiftWorld.UI.MVC.Models.EditUserViewModel2

@{
    ViewBag.Title = "Details";
}

<div class="col-12">


    <h2>Details</h2>

    <div>
        <h4>User</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DiscordName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiscordName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DiscordDiscriminator)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiscordDiscriminator)
            </dd>
        </dl>
    </div>
    <h4>List of roles for this user</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>No roles found for this user.</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>



</div>